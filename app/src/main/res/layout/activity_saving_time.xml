<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".saving_time">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linage"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/army"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/back"
                android:layout_width="38dp"
                android:layout_height="32dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/ic_baseline"
                android:tint="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:text="Saving Time"
                android:fontFamily="@font/aclonica"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_above="@id/navigation">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/navigation"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/onemonth"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">




        <TextView
            android:id="@+id/testting"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="testing"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/optionSelected"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="options"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/checkBox6"
            android:layout_width="161dp"
            android:layout_height="40dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="1 MONTH"
            android:textColor="@color/black" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/twomonths"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/testting2"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="testing2"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <Switch
            android:id="@+id/checkBox7"
            android:layout_width="161dp"
            android:layout_height="40dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:text="3 MONTHS"
            android:textColor="@color/black" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/threemonths"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/testting3"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="testing"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <Switch
            android:id="@+id/checkBox8"
            android:layout_width="161dp"
            android:layout_height="40dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:text="6 MONTHS"
            android:textColor="@color/black" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/oneyear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/testting4"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="testing"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <Switch
            android:id="@+id/checkBox9"
            android:layout_width="161dp"
            android:layout_height="40dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:text="1 YEAR"
            android:textColor="@color/black" />

    </LinearLayout>


    <Button
        android:id="@+id/enterperiod"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@color/white"
        android:text="Enter Saving Period"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="13dp" />


    <EditText
        android:id="@+id/enter"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:visibility="gone"
        android:textColorHint="@color/black"
        android:hint="Enter Period"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="16dp"
        />



    <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
        android:background="@drawable/corner"
        android:backgroundTint="@color/army"
            android:clickable="true"
        android:enabled="false"
            android:text="Next"
            />


</LinearLayout>

    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />


</RelativeLayout>